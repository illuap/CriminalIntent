        </activity>
        <activity android:name=".CrimePagerActivity"
            android:label="@string/app_name"
            android:parentActivityName=".CrimeListActivity">
        </activity>
        <activity android:name=".CrimeFragment">

        </activity>




    </application>

</manifest>